<view class="page">
    <view class="page__hd">
        <view class="page__title">日期选择器</view>
        <view class="page__desc">使用小程序原生picker，支持农历。</view>
    </view>
    <view class="page__bd">
        <view class="weui-btn-area">
            <comp value="{{solar}}" bindchange="bindSolarChange">
                <button type="default">公历</button>
            </comp>
            <comp value="{{lunar}}" chinese="{{true}}" bindchange="bindLunarChange">
                <button type="default" class="weui-btn">农历</button>
            </comp>
        </view>
    </view>
</view>
